---
const footerLinks = {
  features: [
    { href: '/chart', label: 'Birth Chart' },
    { href: '/cusps', label: 'Cusp Analysis' },
    { href: '/planets', label: 'Planet Details' },
    { href: '/dasha', label: 'Dasha Timeline' },
  ],
  predictions: [
    { href: '/predictions/marriage', label: 'Marriage' },
    { href: '/predictions/career', label: 'Career' },
    { href: '/predictions/finance', label: 'Finance' },
    { href: '/predictions/health', label: 'Health' },
  ],
  resources: [
    { href: '/learn', label: 'Learn KP' },
    { href: '/glossary', label: 'Glossary' },
    { href: '/faq', label: 'FAQ' },
    { href: '/about', label: 'About Us' },
  ],
};
---

<footer class="bg-[--color-warm-sand] border-t border-[--color-border]">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 md:gap-12">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="flex items-center gap-2 mb-4">
          <div class="w-10 h-10 rounded-full bg-gradient-to-br from-[--color-terracotta] to-[--color-golden-hour] flex items-center justify-center">
            <svg class="w-6 h-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <circle cx="12" cy="12" r="4" />
              <path d="M12 2v2M12 20v2M2 12h2M20 12h2M4.93 4.93l1.41 1.41M17.66 17.66l1.41 1.41M4.93 19.07l1.41-1.41M17.66 6.34l1.41-1.41" />
            </svg>
          </div>
          <span class="font-heading text-xl font-medium text-[--color-espresso]">
            Sanastro
          </span>
        </a>
        <p class="text-sm text-[--color-text-secondary] mb-4 max-w-xs">
          Accurate KP Astrology calculations and predictions based on the Krishnamurti Paddhati system.
        </p>
        <div class="flex gap-3">
          <a href="#" class="p-2 rounded-full bg-[--color-linen] hover:bg-[--color-terracotta] hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
            </svg>
          </a>
          <a href="#" class="p-2 rounded-full bg-[--color-linen] hover:bg-[--color-terracotta] hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Features -->
      <div>
        <h4 class="font-heading font-medium text-[--color-espresso] mb-4">Features</h4>
        <ul class="space-y-2">
          {footerLinks.features.map(link => (
            <li>
              <a href={link.href} class="text-sm text-[--color-text-secondary] hover:text-[--color-accent] transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Predictions -->
      <div>
        <h4 class="font-heading font-medium text-[--color-espresso] mb-4">Predictions</h4>
        <ul class="space-y-2">
          {footerLinks.predictions.map(link => (
            <li>
              <a href={link.href} class="text-sm text-[--color-text-secondary] hover:text-[--color-accent] transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h4 class="font-heading font-medium text-[--color-espresso] mb-4">Resources</h4>
        <ul class="space-y-2">
          {footerLinks.resources.map(link => (
            <li>
              <a href={link.href} class="text-sm text-[--color-text-secondary] hover:text-[--color-accent] transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom -->
    <div class="mt-12 pt-8 border-t border-[--color-border] flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-sm text-[--color-text-muted]">
        &copy; 2024 Sanastro. All rights reserved.
      </p>
      <div class="flex gap-6 text-sm text-[--color-text-muted]">
        <a href="/privacy" class="hover:text-[--color-accent] transition-colors">Privacy Policy</a>
        <a href="/terms" class="hover:text-[--color-accent] transition-colors">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>
