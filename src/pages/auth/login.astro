---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';

const error = Astro.url.searchParams.get('error');
---

<Layout title="Login">
  <Navigation currentPath="/auth/login" />

  <main class="pt-20 min-h-screen bg-gradient-to-b from-[--color-cream] to-[--color-linen]">
    <div class="max-w-md mx-auto px-4 sm:px-6 py-16 md:py-24">
      <!-- Logo and Title -->
      <div class="text-center mb-8">
        <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-gradient-to-br from-[--color-terracotta] to-[--color-golden-hour] flex items-center justify-center">
          <svg class="w-10 h-10 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <circle cx="12" cy="12" r="4" />
            <path d="M12 2v2M12 20v2M2 12h2M20 12h2M4.93 4.93l1.41 1.41M17.66 17.66l1.41 1.41M4.93 19.07l1.41-1.41M17.66 6.34l1.41-1.41" />
          </svg>
        </div>
        <h1 class="font-heading text-3xl md:text-4xl text-[--color-espresso] mb-2">
          Welcome to Sanastro
        </h1>
        <p class="text-[--color-text-muted]">
          Sign in to access your cosmic blueprint
        </p>
      </div>

      <!-- Login Card -->
      <div class="card p-8">
        {error && (
          <div class="mb-6 p-4 rounded-lg bg-red-50 border border-red-200">
            <div class="flex gap-3">
              <svg class="w-5 h-5 text-red-500 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <p class="text-sm text-red-700">
                {error === 'auth_failed' && 'Authentication failed. Please try again.'}
                {error === 'registration_failed' && 'Registration failed. Please try again.'}
                {error === 'no_session' && 'Session expired. Please sign in again.'}
                {!['auth_failed', 'registration_failed', 'no_session'].includes(error) && 'An error occurred. Please try again.'}
              </p>
            </div>
          </div>
        )}

        <!-- Google Sign In Button -->
        <button
          id="google-login-btn"
          class="btn w-full flex items-center justify-center gap-3 bg-white border border-[--color-border] hover:bg-[--color-linen] text-[--color-espresso] py-3"
        >
          <svg class="w-5 h-5" viewBox="0 0 24 24">
            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          <span class="font-medium">Continue with Google</span>
        </button>

        <!-- Info Note -->
        <div class="mt-6 p-4 rounded-lg bg-[--color-golden-hour]/10 border border-[--color-golden-hour]/20">
          <div class="flex gap-3">
            <svg class="w-5 h-5 text-[--color-golden-hour] shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <p class="text-sm text-[--color-cocoa]">
              New accounts require approval from our admin team. You'll receive an email once your account is approved.
            </p>
          </div>
        </div>

        <!-- Divider -->
        <div class="my-6 flex items-center gap-4">
          <div class="flex-1 h-px bg-[--color-border]"></div>
          <span class="text-xs text-[--color-text-muted] uppercase tracking-wider">Secure Login</span>
          <div class="flex-1 h-px bg-[--color-border]"></div>
        </div>

        <!-- Security Note -->
        <p class="text-center text-xs text-[--color-text-muted]">
          Your data is protected with industry-standard encryption. We only access your email and profile information.
        </p>
      </div>

      <!-- Back to Home -->
      <p class="text-center mt-6">
        <a href="/" class="text-sm text-[--color-accent] hover:underline">
          &larr; Back to Home
        </a>
      </p>
    </div>
  </main>

  <Footer />
</Layout>

<script>
  import { createClient } from '../../lib/supabase/client';

  const loginBtn = document.getElementById('google-login-btn');

  loginBtn?.addEventListener('click', async () => {
    const supabase = createClient();

    loginBtn.setAttribute('disabled', 'true');
    loginBtn.innerHTML = `
      <svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      <span>Connecting...</span>
    `;

    const { error } = await supabase.auth.signInWithOAuth({
      provider: 'google',
      options: {
        redirectTo: `${window.location.origin}/auth/callback`,
        queryParams: {
          access_type: 'offline',
          prompt: 'consent',
        },
      },
    });

    if (error) {
      console.error('Login error:', error.message);
      loginBtn.removeAttribute('disabled');
      loginBtn.innerHTML = `
        <svg class="w-5 h-5" viewBox="0 0 24 24">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        <span class="font-medium">Continue with Google</span>
      `;
      window.location.href = '/auth/login?error=auth_failed';
    }
  });
</script>
