---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';

const { user } = Astro.locals;
---

<Layout title="Pending Approval">
  <Navigation currentPath="/auth/pending" />

  <main class="pt-20 min-h-screen bg-gradient-to-b from-[--color-cream] to-[--color-linen]">
    <div class="max-w-lg mx-auto px-4 sm:px-6 py-16 md:py-24">
      <!-- Status Card -->
      <div class="card p-8 text-center">
        <!-- Pending Icon -->
        <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-[--color-golden-hour]/20 flex items-center justify-center">
          <svg class="w-10 h-10 text-[--color-golden-hour]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>

        <!-- Status Badge -->
        <span class="inline-block px-4 py-1 rounded-full text-sm font-medium bg-[--color-golden-hour]/20 text-[--color-golden-hour] mb-4">
          Pending Approval
        </span>

        <h1 class="font-heading text-2xl md:text-3xl text-[--color-espresso] mb-4">
          Your Account is Under Review
        </h1>

        <p class="text-[--color-text-muted] mb-6">
          Thank you for signing up! Our admin team is reviewing your account. You'll receive an email once your account is approved.
        </p>

        {user?.email && (
          <div class="p-4 rounded-lg bg-[--color-linen] mb-6">
            <p class="text-sm text-[--color-cocoa]">
              <span class="font-medium">Signed in as:</span><br />
              {user.email}
            </p>
          </div>
        )}

        <!-- What to Expect -->
        <div class="text-left mt-8 p-4 rounded-lg bg-[--color-cream] border border-[--color-border]">
          <h3 class="font-heading text-lg text-[--color-espresso] mb-3">What happens next?</h3>
          <ul class="space-y-2 text-sm text-[--color-cocoa]">
            <li class="flex gap-2">
              <svg class="w-5 h-5 text-[--color-sage] shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span>Our admin will review your registration</span>
            </li>
            <li class="flex gap-2">
              <svg class="w-5 h-5 text-[--color-sage] shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span>You'll receive an email notification</span>
            </li>
            <li class="flex gap-2">
              <svg class="w-5 h-5 text-[--color-sage] shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span>Once approved, you can access all features</span>
            </li>
          </ul>
        </div>

        <!-- Actions -->
        <div class="flex flex-col sm:flex-row gap-3 justify-center mt-8">
          <a href="/auth/logout" class="btn btn-secondary">
            Sign Out
          </a>
          <a href="/" class="btn btn-ghost">
            Back to Home
          </a>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>
