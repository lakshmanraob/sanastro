---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const features = [
  {
    title: 'Cusp Analysis',
    description: 'Precise calculation of all 12 house cusps with Sign, Star, and Sub Lords using the Placidus system.',
    icon: 'cusp',
  },
  {
    title: 'Planet Positions',
    description: 'Detailed positions of all 9 planets with Nakshatra, Sub Lord, and house placements.',
    icon: 'planet',
  },
  {
    title: 'Significators',
    description: '4-fold significator analysis - the heart of KP predictions for accurate timing.',
    icon: 'significator',
  },
  {
    title: 'Dasha Timeline',
    description: 'Complete Vimshottari Dasha periods from Mahadasha to Sookshma for life event timing.',
    icon: 'dasha',
  },
  {
    title: 'Predictions',
    description: 'House-wise predictions for marriage, career, finance, health, and more with reasoning.',
    icon: 'prediction',
  },
  {
    title: 'Ruling Planets',
    description: 'Current ruling planets for event timing and horary astrology applications.',
    icon: 'ruling',
  },
];

const predictionAreas = [
  { name: 'Marriage', houses: '2, 7, 11', icon: 'üíç' },
  { name: 'Career', houses: '2, 6, 10', icon: 'üíº' },
  { name: 'Finance', houses: '2, 6, 11', icon: 'üí∞' },
  { name: 'Health', houses: '1, 6, 8', icon: 'üè•' },
  { name: 'Education', houses: '4, 9, 11', icon: 'üìö' },
  { name: 'Travel', houses: '3, 9, 12', icon: '‚úàÔ∏è' },
];
---

<Layout title="KP Astrology">
  <Navigation currentPath="/" />

  <main>
    <!-- Hero Section -->
    <section class="relative min-h-screen bg-gradient-mystical pt-20 overflow-hidden">
      <!-- Decorative Elements -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <!-- Sun -->
        <div class="absolute top-20 right-10 md:right-20 w-32 md:w-48 h-32 md:h-48 opacity-30">
          <svg viewBox="0 0 100 100" class="w-full h-full animate-spin-slow text-[--color-golden-hour]">
            <circle cx="50" cy="50" r="20" fill="currentColor" opacity="0.6" />
            {Array.from({ length: 12 }).map((_, i) => (
              <line
                x1="50"
                y1="15"
                x2="50"
                y2="5"
                stroke="currentColor"
                stroke-width="2"
                transform={`rotate(${i * 30} 50 50)`}
              />
            ))}
          </svg>
        </div>
        <!-- Moon -->
        <div class="absolute bottom-40 left-10 w-20 md:w-32 h-20 md:h-32 opacity-20 animate-float">
          <svg viewBox="0 0 100 100" class="w-full h-full text-[--color-dusty-rose]">
            <path d="M50 10 A40 40 0 1 0 50 90 A30 30 0 1 1 50 10" fill="currentColor" />
          </svg>
        </div>
        <!-- Stars -->
        <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-[--color-golden-hour] rounded-full opacity-40 animate-pulse"></div>
        <div class="absolute top-1/3 right-1/3 w-1.5 h-1.5 bg-[--color-terracotta] rounded-full opacity-30 animate-pulse" style="animation-delay: 0.5s"></div>
        <div class="absolute bottom-1/3 right-1/4 w-2 h-2 bg-[--color-dusty-rose] rounded-full opacity-40 animate-pulse" style="animation-delay: 1s"></div>
      </div>

      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-20 md:pt-32 pb-20">
        <div class="text-center max-w-4xl mx-auto">
          <p class="text-sm font-semibold tracking-[0.2em] uppercase text-[--color-taupe] mb-4 animate-fade-in">
            Krishnamurti Paddhati Astrology
          </p>
          <h1 class="font-display text-4xl sm:text-5xl md:text-6xl lg:text-7xl text-[--color-espresso] mb-6 animate-fade-up">
            Discover Your Cosmic
            <span class="text-gradient"> Blueprint</span>
          </h1>
          <p class="text-lg md:text-xl text-[--color-text-secondary] mb-10 max-w-2xl mx-auto animate-fade-up" style="animation-delay: 0.2s">
            Unlock the secrets of your destiny with precise KP Astrology calculations.
            Get accurate predictions backed by the scientific Stellar system.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center animate-fade-up" style="animation-delay: 0.4s">
            <a href="/birth-data" class="btn btn-primary text-base px-8 py-4">
              Generate Your Chart
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
            <a href="/learn" class="btn btn-secondary text-base px-8 py-4">
              Learn KP System
            </a>
          </div>
        </div>

        <!-- Chart Preview -->
        <div class="mt-16 md:mt-24 animate-fade-up" style="animation-delay: 0.6s">
          <div class="relative max-w-3xl mx-auto">
            <div class="absolute inset-0 bg-gradient-to-r from-[--color-terracotta]/20 to-[--color-golden-hour]/20 rounded-3xl blur-3xl"></div>
            <div class="relative bg-[--color-surface] rounded-2xl shadow-lg p-6 md:p-10 border border-[--color-border]">
              <!-- Sample Chart Visualization -->
              <div class="aspect-square max-w-md mx-auto relative">
                <svg viewBox="0 0 400 400" class="w-full h-full">
                  <!-- Outer square -->
                  <rect x="20" y="20" width="360" height="360" fill="none" stroke="var(--color-linen)" stroke-width="2" />
                  <!-- Inner diamond (rotated square) -->
                  <rect x="110" y="110" width="180" height="180" fill="none" stroke="var(--color-linen)" stroke-width="2" transform="rotate(45 200 200)" />
                  <!-- Diagonal lines -->
                  <line x1="20" y1="20" x2="200" y2="200" stroke="var(--color-linen)" stroke-width="1" />
                  <line x1="380" y1="20" x2="200" y2="200" stroke="var(--color-linen)" stroke-width="1" />
                  <line x1="20" y1="380" x2="200" y2="200" stroke="var(--color-linen)" stroke-width="1" />
                  <line x1="380" y1="380" x2="200" y2="200" stroke="var(--color-linen)" stroke-width="1" />
                  <!-- House numbers -->
                  <text x="200" y="60" text-anchor="middle" class="fill-[--color-taupe] text-sm">1</text>
                  <text x="310" y="100" text-anchor="middle" class="fill-[--color-taupe] text-sm">12</text>
                  <text x="360" y="200" text-anchor="middle" class="fill-[--color-taupe] text-sm">11</text>
                  <text x="310" y="310" text-anchor="middle" class="fill-[--color-taupe] text-sm">10</text>
                  <text x="200" y="360" text-anchor="middle" class="fill-[--color-taupe] text-sm">7</text>
                  <text x="90" y="310" text-anchor="middle" class="fill-[--color-taupe] text-sm">8</text>
                  <text x="50" y="200" text-anchor="middle" class="fill-[--color-taupe] text-sm">9</text>
                  <text x="90" y="100" text-anchor="middle" class="fill-[--color-taupe] text-sm">2</text>
                  <!-- Sample planets -->
                  <text x="200" y="90" text-anchor="middle" class="fill-[--color-malefic] text-xs font-semibold">Ma</text>
                  <text x="280" y="200" text-anchor="middle" class="fill-[--color-benefic] text-xs font-semibold">Ju Ve</text>
                  <text x="200" y="200" text-anchor="middle" class="fill-[--color-golden-hour] text-xs font-semibold">Su Me</text>
                  <text x="120" y="280" text-anchor="middle" class="fill-[--color-neutral] text-xs font-semibold">Sa</text>
                  <text x="200" y="320" text-anchor="middle" class="fill-[--color-celestial-blue] text-xs font-semibold">Mo</text>
                </svg>
              </div>
              <p class="text-center text-sm text-[--color-text-muted] mt-4">
                South Indian Style Birth Chart
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-20 md:py-32 bg-[--color-cream]">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <p class="text-sm font-semibold tracking-[0.2em] uppercase text-[--color-taupe] mb-3">
            Powerful Features
          </p>
          <h2 class="font-heading text-3xl md:text-4xl text-[--color-espresso] mb-4">
            Complete KP Analysis Tools
          </h2>
          <p class="text-[--color-text-secondary] max-w-2xl mx-auto">
            Everything you need for accurate KP Astrology calculations and predictions,
            from cusp analysis to detailed dasha timelines.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 stagger-children">
          {features.map((feature) => (
            <div class="card p-6 md:p-8 hover:shadow-glow">
              <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-[--color-terracotta]/10 to-[--color-golden-hour]/10 flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-[--color-terracotta]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  {feature.icon === 'cusp' && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
                  )}
                  {feature.icon === 'planet' && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                  )}
                  {feature.icon === 'significator' && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                  )}
                  {feature.icon === 'dasha' && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  )}
                  {feature.icon === 'prediction' && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                  )}
                  {feature.icon === 'ruling' && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  )}
                </svg>
              </div>
              <h3 class="font-heading text-xl font-medium text-[--color-espresso] mb-2">
                {feature.title}
              </h3>
              <p class="text-[--color-text-secondary] text-sm leading-relaxed">
                {feature.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Prediction Areas Section -->
    <section class="py-20 md:py-32 bg-[--color-warm-sand]">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <p class="text-sm font-semibold tracking-[0.2em] uppercase text-[--color-taupe] mb-3">
            Life Predictions
          </p>
          <h2 class="font-heading text-3xl md:text-4xl text-[--color-espresso] mb-4">
            Insights for Every Aspect of Life
          </h2>
          <p class="text-[--color-text-secondary] max-w-2xl mx-auto">
            Get detailed predictions with house significator analysis and timing for major life events.
          </p>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 md:gap-6">
          {predictionAreas.map((area) => (
            <a href={`/predictions/${area.name.toLowerCase()}`} class="card p-6 text-center group cursor-pointer">
              <span class="text-3xl mb-3 block group-hover:scale-110 transition-transform">
                {area.icon}
              </span>
              <h3 class="font-heading text-lg font-medium text-[--color-espresso] mb-1">
                {area.name}
              </h3>
              <p class="text-xs text-[--color-text-muted]">
                Houses {area.houses}
              </p>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 md:py-32 bg-gradient-hero">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="relative">
          <div class="absolute inset-0 flex items-center justify-center opacity-10">
            <svg viewBox="0 0 200 200" class="w-96 h-96 animate-spin-slow">
              <circle cx="100" cy="100" r="80" fill="none" stroke="var(--color-terracotta)" stroke-width="0.5" />
              <circle cx="100" cy="100" r="60" fill="none" stroke="var(--color-golden-hour)" stroke-width="0.5" />
              <circle cx="100" cy="100" r="40" fill="none" stroke="var(--color-dusty-rose)" stroke-width="0.5" />
              {Array.from({ length: 12 }).map((_, i) => (
                <line
                  x1="100"
                  y1="20"
                  x2="100"
                  y2="30"
                  stroke="var(--color-terracotta)"
                  stroke-width="0.5"
                  transform={`rotate(${i * 30} 100 100)`}
                />
              ))}
            </svg>
          </div>
          <div class="relative">
            <h2 class="font-display text-3xl md:text-5xl text-[--color-espresso] mb-6">
              Begin Your Celestial Journey
            </h2>
            <p class="text-lg text-[--color-text-secondary] mb-10 max-w-xl mx-auto">
              Create your personalized KP horoscope and unlock insights about your destiny,
              relationships, career, and spiritual path.
            </p>
            <a href="/birth-data" class="btn btn-primary text-lg px-10 py-4 shadow-glow">
              Create Free Horoscope
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
