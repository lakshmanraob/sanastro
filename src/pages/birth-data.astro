---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const ayanamsaOptions = [
  { value: 'kp', label: 'KP Ayanamsa (Krishnamurti)' },
  { value: 'lahiri', label: 'Lahiri (Chitrapaksha)' },
  { value: 'raman', label: 'Raman' },
  { value: 'kp_new', label: 'KP New Ayanamsa' },
];
---

<Layout title="Birth Data Entry">
  <Navigation currentPath="/birth-data" />

  <main class="pt-20 min-h-screen bg-gradient-mystical">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-20">
      <!-- Header -->
      <div class="text-center mb-12">
        <p class="text-sm font-semibold tracking-[0.2em] uppercase text-[--color-taupe] mb-3">
          Step 1 of 2
        </p>
        <h1 class="font-heading text-3xl md:text-4xl text-[--color-espresso] mb-4">
          Enter Birth Details
        </h1>
        <p class="text-[--color-text-secondary] max-w-xl mx-auto">
          Provide accurate birth information for precise KP horoscope calculations.
          Exact birth time is crucial for accurate predictions.
        </p>
      </div>

      <!-- Form Card -->
      <div class="card p-6 md:p-10">
        <form id="birth-data-form" class="space-y-8">
          <!-- Personal Information -->
          <div>
            <h2 class="font-heading text-xl text-[--color-espresso] mb-6 flex items-center gap-2">
              <span class="w-8 h-8 rounded-full bg-[--color-terracotta]/10 flex items-center justify-center text-sm font-semibold text-[--color-terracotta]">1</span>
              Personal Information
            </h2>
            <div class="grid md:grid-cols-2 gap-6">
              <div class="md:col-span-2">
                <label for="name" class="label">Full Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  class="input"
                  placeholder="Enter your full name"
                  required
                />
              </div>
            </div>
          </div>

          <!-- Birth Date & Time -->
          <div>
            <h2 class="font-heading text-xl text-[--color-espresso] mb-6 flex items-center gap-2">
              <span class="w-8 h-8 rounded-full bg-[--color-terracotta]/10 flex items-center justify-center text-sm font-semibold text-[--color-terracotta]">2</span>
              Birth Date & Time
            </h2>
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="birthDate" class="label">Date of Birth</label>
                <input
                  type="date"
                  id="birthDate"
                  name="birthDate"
                  class="input"
                  required
                />
              </div>
              <div>
                <label for="birthTime" class="label">
                  Time of Birth
                  <span class="text-[--color-text-muted] font-normal">(24-hour format)</span>
                </label>
                <div class="grid grid-cols-3 gap-2">
                  <div>
                    <input
                      type="number"
                      id="birthHour"
                      name="birthHour"
                      class="input text-center"
                      placeholder="HH"
                      min="0"
                      max="23"
                      required
                    />
                  </div>
                  <div>
                    <input
                      type="number"
                      id="birthMinute"
                      name="birthMinute"
                      class="input text-center"
                      placeholder="MM"
                      min="0"
                      max="59"
                      required
                    />
                  </div>
                  <div>
                    <input
                      type="number"
                      id="birthSecond"
                      name="birthSecond"
                      class="input text-center"
                      placeholder="SS"
                      min="0"
                      max="59"
                      value="0"
                    />
                  </div>
                </div>
              </div>
            </div>
            <div class="mt-4 p-4 rounded-lg bg-[--color-golden-hour]/10 border border-[--color-golden-hour]/20">
              <div class="flex gap-3">
                <svg class="w-5 h-5 text-[--color-golden-hour] shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <p class="text-sm text-[--color-cocoa]">
                  <strong>Note:</strong> Exact birth time is essential for accurate KP predictions.
                  If exact time is unknown, try to get the closest estimate from birth certificate or family records.
                </p>
              </div>
            </div>
          </div>

          <!-- Birth Place -->
          <div>
            <h2 class="font-heading text-xl text-[--color-espresso] mb-6 flex items-center gap-2">
              <span class="w-8 h-8 rounded-full bg-[--color-terracotta]/10 flex items-center justify-center text-sm font-semibold text-[--color-terracotta]">3</span>
              Birth Place
            </h2>
            <div class="grid md:grid-cols-2 gap-6">
              <div class="md:col-span-2 relative">
                <label for="birthPlace" class="label">Place of Birth</label>
                <div class="relative">
                  <input
                    type="text"
                    id="birthPlace"
                    name="birthPlace"
                    class="input pr-10"
                    placeholder="Start typing to search for a place..."
                    autocomplete="off"
                    required
                  />
                  <div id="place-loading" class="hidden absolute right-3 top-1/2 -translate-y-1/2">
                    <svg class="w-5 h-5 animate-spin text-[--color-terracotta]" fill="none" viewBox="0 0 24 24">
                      <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                      <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                  </div>
                </div>
                <div id="place-suggestions" class="hidden absolute z-50 w-full mt-1 bg-white border border-[--color-border] rounded-lg shadow-lg max-h-60 overflow-y-auto">
                  <!-- Suggestions will be populated here -->
                </div>
                <p class="text-xs text-[--color-text-muted] mt-1">
                  Search for your birth place - coordinates and timezone will be auto-filled
                </p>
              </div>
              <div>
                <label for="latitude" class="label">Latitude</label>
                <input
                  type="number"
                  id="latitude"
                  name="latitude"
                  class="input bg-[--color-linen]"
                  placeholder="Auto-filled from place search"
                  step="0.0001"
                  readonly
                  required
                />
              </div>
              <div>
                <label for="longitude" class="label">Longitude</label>
                <input
                  type="number"
                  id="longitude"
                  name="longitude"
                  class="input bg-[--color-linen]"
                  placeholder="Auto-filled from place search"
                  step="0.0001"
                  readonly
                  required
                />
              </div>
              <div>
                <label for="timezone" class="label">Timezone (GMT offset)</label>
                <input
                  type="number"
                  id="timezone"
                  name="timezone"
                  class="input bg-[--color-linen]"
                  placeholder="Auto-filled from place search"
                  step="0.5"
                  readonly
                  required
                />
              </div>
            </div>
          </div>

          <!-- Calculation Settings -->
          <div>
            <h2 class="font-heading text-xl text-[--color-espresso] mb-6 flex items-center gap-2">
              <span class="w-8 h-8 rounded-full bg-[--color-terracotta]/10 flex items-center justify-center text-sm font-semibold text-[--color-terracotta]">4</span>
              Calculation Settings
            </h2>
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="ayanamsa" class="label">Ayanamsa</label>
                <select id="ayanamsa" name="ayanamsa" class="input">
                  {ayanamsaOptions.map((option) => (
                    <option value={option.value} selected={option.value === 'kp'}>
                      {option.label}
                    </option>
                  ))}
                </select>
              </div>
              <div>
                <label for="houseSystem" class="label">House System</label>
                <select id="houseSystem" name="houseSystem" class="input" disabled>
                  <option value="placidus" selected>Placidus (KP Standard)</option>
                </select>
                <p class="text-xs text-[--color-text-muted] mt-1">
                  KP system requires Placidus house system
                </p>
              </div>
              <div class="md:col-span-2">
                <label class="label">Chart Style</label>
                <div class="flex gap-4 mt-2">
                  <label class="flex items-center gap-3 p-4 rounded-lg border-2 border-[--color-border] cursor-pointer hover:border-[--color-terracotta] transition-colors has-[:checked]:border-[--color-terracotta] has-[:checked]:bg-[--color-terracotta]/5">
                    <input type="radio" name="chartStyle" value="south" class="w-4 h-4 text-[--color-terracotta]" checked />
                    <div>
                      <p class="font-medium text-[--color-espresso]">South Indian</p>
                      <p class="text-xs text-[--color-text-muted]">Fixed sign positions, houses rotate</p>
                    </div>
                  </label>
                  <label class="flex items-center gap-3 p-4 rounded-lg border-2 border-[--color-border] cursor-pointer hover:border-[--color-terracotta] transition-colors has-[:checked]:border-[--color-terracotta] has-[:checked]:bg-[--color-terracotta]/5">
                    <input type="radio" name="chartStyle" value="north" class="w-4 h-4 text-[--color-terracotta]" />
                    <div>
                      <p class="font-medium text-[--color-espresso]">North Indian</p>
                      <p class="text-xs text-[--color-text-muted]">Fixed house positions, signs rotate</p>
                    </div>
                  </label>
                </div>
              </div>
            </div>
          </div>

          <!-- Submit Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 pt-6">
            <button type="submit" class="btn btn-primary flex-1 py-4">
              Generate Horoscope
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </button>
            <button type="button" class="btn btn-secondary py-4" id="save-profile-btn">
              Save Profile
            </button>
          </div>
        </form>
      </div>

      <!-- Quick Links -->
      <div class="mt-8 text-center">
        <p class="text-sm text-[--color-text-muted]">
          Already have a saved profile?
          <a href="/dashboard" class="text-[--color-terracotta] hover:underline ml-1">
            Go to Dashboard
          </a>
        </p>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<script>
  // Google Places Autocomplete integration
  const birthPlaceInput = document.getElementById('birthPlace') as HTMLInputElement;
  const suggestionsContainer = document.getElementById('place-suggestions');
  const loadingIndicator = document.getElementById('place-loading');
  const latitudeInput = document.getElementById('latitude') as HTMLInputElement;
  const longitudeInput = document.getElementById('longitude') as HTMLInputElement;
  const timezoneInput = document.getElementById('timezone') as HTMLInputElement;

  let debounceTimer: ReturnType<typeof setTimeout>;
  let sessionToken: string = '';

  // Generate a session token for Places API
  function generateSessionToken(): string {
    return 'xxxxxxxx-xxxx-4xxx-yxxx-xxxxxxxxxxxx'.replace(/[xy]/g, (c) => {
      const r = Math.random() * 16 | 0;
      const v = c === 'x' ? r : (r & 0x3 | 0x8);
      return v.toString(16);
    });
  }

  // Initialize session token
  sessionToken = generateSessionToken();

  // Fetch place suggestions from Google Places API
  async function fetchPlaceSuggestions(query: string): Promise<void> {
    if (query.length < 3) {
      suggestionsContainer?.classList.add('hidden');
      return;
    }

    loadingIndicator?.classList.remove('hidden');

    try {
      const response = await fetch(`/api/places/autocomplete?input=${encodeURIComponent(query)}&sessionToken=${sessionToken}`);
      const data = await response.json();

      if (data.predictions && data.predictions.length > 0) {
        renderSuggestions(data.predictions);
      } else {
        suggestionsContainer?.classList.add('hidden');
      }
    } catch (error) {
      console.error('Error fetching place suggestions:', error);
      suggestionsContainer?.classList.add('hidden');
    } finally {
      loadingIndicator?.classList.add('hidden');
    }
  }

  // Render suggestions in dropdown
  function renderSuggestions(predictions: Array<{ place_id: string; description: string; structured_formatting?: { main_text: string; secondary_text: string } }>): void {
    if (!suggestionsContainer) return;

    suggestionsContainer.innerHTML = predictions.map((prediction) => `
      <div class="place-suggestion px-4 py-3 cursor-pointer hover:bg-[--color-linen] border-b border-[--color-border] last:border-0 transition-colors" data-place-id="${prediction.place_id}">
        <p class="font-medium text-[--color-espresso] text-sm">${prediction.structured_formatting?.main_text || prediction.description}</p>
        ${prediction.structured_formatting?.secondary_text ? `<p class="text-xs text-[--color-text-muted]">${prediction.structured_formatting.secondary_text}</p>` : ''}
      </div>
    `).join('');

    suggestionsContainer.classList.remove('hidden');

    // Add click handlers to suggestions
    const suggestionElements = suggestionsContainer.querySelectorAll('.place-suggestion');
    suggestionElements.forEach((el) => {
      el.addEventListener('click', () => {
        const placeId = el.getAttribute('data-place-id');
        if (placeId) {
          selectPlace(placeId, el.querySelector('p')?.textContent || '');
        }
      });
    });
  }

  // Select a place and fetch its details
  async function selectPlace(placeId: string, placeName: string): Promise<void> {
    birthPlaceInput.value = placeName;
    suggestionsContainer?.classList.add('hidden');
    loadingIndicator?.classList.remove('hidden');

    try {
      const response = await fetch(`/api/places/details?placeId=${placeId}&sessionToken=${sessionToken}`);
      const data = await response.json();

      if (data.result) {
        const { geometry, utc_offset } = data.result;

        if (geometry?.location) {
          latitudeInput.value = geometry.location.lat.toFixed(4);
          longitudeInput.value = geometry.location.lng.toFixed(4);
        }

        // Convert UTC offset from minutes to hours
        if (utc_offset !== undefined) {
          timezoneInput.value = (utc_offset / 60).toString();
        }

        // Generate new session token for next search
        sessionToken = generateSessionToken();
      }
    } catch (error) {
      console.error('Error fetching place details:', error);
    } finally {
      loadingIndicator?.classList.add('hidden');
    }
  }

  // Debounced input handler
  birthPlaceInput?.addEventListener('input', (e) => {
    const query = (e.target as HTMLInputElement).value;

    clearTimeout(debounceTimer);
    debounceTimer = setTimeout(() => {
      fetchPlaceSuggestions(query);
    }, 300);
  });

  // Close suggestions on click outside
  document.addEventListener('click', (e) => {
    if (!birthPlaceInput?.contains(e.target as Node) && !suggestionsContainer?.contains(e.target as Node)) {
      suggestionsContainer?.classList.add('hidden');
    }
  });

  // Handle keyboard navigation
  birthPlaceInput?.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      suggestionsContainer?.classList.add('hidden');
    }
  });

  // Form submission handler
  const form = document.getElementById('birth-data-form');

  form?.addEventListener('submit', (e) => {
    e.preventDefault();

    // Collect form data
    const formData = new FormData(form as HTMLFormElement);
    const data = Object.fromEntries(formData.entries());

    // Store in localStorage for demo
    localStorage.setItem('birthData', JSON.stringify(data));

    // Redirect to chart page
    window.location.href = '/chart';
  });

  // Save profile button
  const saveBtn = document.getElementById('save-profile-btn');
  saveBtn?.addEventListener('click', () => {
    const formData = new FormData(form as HTMLFormElement);
    const data = Object.fromEntries(formData.entries());

    // Get existing profiles or create new array
    const profiles = JSON.parse(localStorage.getItem('savedProfiles') || '[]');
    profiles.push({
      ...data,
      id: Date.now(),
      createdAt: new Date().toISOString()
    });

    localStorage.setItem('savedProfiles', JSON.stringify(profiles));
    alert('Profile saved successfully!');
  });
</script>
